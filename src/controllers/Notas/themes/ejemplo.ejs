<div v-for="(item) in info" :key="item.id" style="margin-top: 1rem; margin-bottom: 1rem;height: 240mm;">
    <div style="text-align: center;padding: 1.5rem;color:#000;">
        <table style="width: 100%;">
            <tbody>
                <tr>
                    <td style="width: 20%;">
                        <img style="width: 100%;" :src="$store.state.logoReporter" alt="Logo" />
                    </td>
                    <td style="width: 70%;">
                        <div style="text-align: center;">
                            <span style="color:#000;font-weight: 700;font-size: 0.9rem;line-height: 1.375;">
                                {{ settings.unidadeducativa }}
                            </span><br>
                            <p style="margin-top:-1px;text-align: center;font-size: .8rem;">
                                INFORME DE VALORACIOES QUIMESTRALES
                            </p>
                        </div>
                    </td>
                    <td style="width: 10%;text-align: center;">
                        <img style="width: 80%;" :src="settings.logo" alt="Logo" />
                    </td>
                </tr>
            </tbody>
        </table>
        <hr style="color: #000;">
        <table style="width: 100%;">
            <tbody>
                <tr style="font-size: .75rem">
                    <td style="width: 45%;">
                        <span>CURSO : <b>{{ item.curso.nombre }} / {{ item.paralelo }}</b></span> <br>
                        <span>ESTUDIANTE: <b>{{ item.fullname }}</b></span>
                    </td>
                    <td style="width: 10%;">
                        <div style="text-align: center;">
                            CÓDIGO : {{ item.nmatricula }}
                        </div>
                    </td>
                    <td style="width: 45%;text-align: right;">
                        <span>PERIODO: <b>{{ item.periodo.nombre }}</b></span><br>
                        <span>FECHA: {{ fechaA }}</span>
                    </td>
                </tr>
            </tbody>
        </table>
        <table
            style=" border-color: #000;border-style: solid;border-width: 0px 1px 1px;max-width: 100%; width: 100%; border-spacing: 0; border-collapse: separate;">
            <thead>
                <tr style="border-width: 1px 0px 0px;">
                    <th
                        style="border-top: 1px solid #000;border-bottom: 1px solid #000;padding: 8px 10px;font-size: .65rem;">
                        ÁMBITO
                    </th>
                    <th
                        style="border-top: 1px solid #000;border-bottom: 1px solid #000;padding: 8px 10px;font-size: .65rem;">
                        1° QUIM
                    </th>
                    <th
                        style="border-top: 1px solid #000;border-bottom: 1px solid #000;padding: 8px 10px;font-size: .65rem;">
                        2° QUIM
                    </th>
                </tr>
            </thead>

            <tbody>
                <tr v-for="subItems in item.ambitos" :key="subItems.id">
                    <td
                        style="border-right: 1px solid #000;font-size: .65rem;border-bottom: 1px solid rgb(0, 0, 0);">
                        {{ subItems.amb }} </td>

                    <td
                        style="font-size: .65rem;border-right: 1px solid #000;border-bottom: 1px solid rgb(0, 0, 0);">
                        {{ subItems.reg1 }}
                    </td>
                    <td style="font-size: .65rem;border-bottom: 1px solid rgb(0, 0, 0);">
                        {{ subItems.reg2 }}
                    </td>
                </tr>
            </tbody>
        </table>
        <div style="margin-top: 2rem;">
            <table style=" width: 100%;">
                <tbody>
                    <tr>
                        <td style="width: 50%;">
                            <div style="text-align: center;">
                                <span>
                                    <b>______________________________</b>
                                </span> <br>
                                <p style=" font-size: .875rem;">
                                    <b>{{ item.destrezas[0].docente.fullname }}</b><br>
                                    TUTOR/A
                                </p>
                            </div>
                        </td>
                        <td style="width: 50%;">
                            <div style="text-align: center;">
                                <span>
                                    <b>_____________________________</b>
                                </span> <br>
                                <p style="font-size: .875rem;">
                                    <b>{{ settings.rector }}</b><br>
                                    RECTOR/A
                                </p>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
</div>